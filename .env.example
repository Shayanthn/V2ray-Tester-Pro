# V2Ray Tester Pro - Environment Configuration Template
# Copy this file to .env and fill in your values

# ===== Testing Configuration =====
TEST_URL_PING=https://www.google.com/generate_204
TEST_URL_DOWNLOAD=https://speed.cloudflare.com/__down?bytes=5000000
TEST_URL_UPLOAD=https://speed.cloudflare.com/__up
CENSORSHIP_CHECK_URL=https://www.youtube.com
TEST_TIMEOUT=10
MAX_CONCURRENT_TESTS=20
NETWORK_RETRY_COUNT=5
MAX_URI_LENGTH=4096

# ===== DNS Configuration =====
DOH_RESOLVER_URL=https://cloudflare-dns.com/dns-query

# ===== Telegram Bot Configuration (Optional) =====
# Leave empty to disable Telegram integration
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_ID=
TELEGRAM_TARGET_IDS=

# ===== Adaptive Testing =====
ADAPTIVE_TESTING=true
ADAPTIVE_BATCH_MIN=20
ADAPTIVE_BATCH_MAX=200
ADAPTIVE_SLEEP_MIN=0.05
ADAPTIVE_SLEEP_MAX=1.0

# ===== Performance Monitoring =====
PERF_HISTORY_SIZE=5000

# ===== Security Configuration =====
# Comma-separated lists (JSON arrays)
IP_BLACKLIST=[]
DOMAIN_BLACKLIST=[]

# ===== Config Sources =====
# JSON arrays of URLs
AGGREGATOR_LINKS=["https://raw.githubusercontent.com/soroushmirzaei/telegram-configs-collector/main/subscription%20links.json"]
DIRECT_CONFIG_SOURCES=["https://raw.githubusercontent.com/mahdibland/V2RayAggregator/master/sub/sub_merge.txt"]
